<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "logo-evently.png", style: "height:60px;width:auto;"%>
    <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Mi Perfil", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Mis Mensajes", "#", class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/ssaunier", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Contacto", "#", class: "dropdown-item" %>
            <%= link_to "Blog", "#", class: "dropdown-item" %>
            <%= link_to "Cerrar Sesión", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Categorías", "#", class: "nav-link", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Bodas", "#", class: "dropdown-item" %>
            <%= link_to "XV Años", "#", class: "dropdown-item" %>
            <%= link_to "Cumpleaños", "#", class: "dropdown-item" %>
            <%= link_to "Fiestas Infantiles", "#", class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "Blog", "#", class: "nav-link" %>
        </li>
        <li class="nav-item">
          <%= link_to "Contacto", "#", class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
